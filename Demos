ANNUAL PERCENTAGE GROWTH RATE
=============================

import scala.collection.mutable.ArrayBuffer
object Demo
{
  def main(args: Array[String])
  {
    val yearRange:Range = 1 to 150
    val annualPercentGrowthRate:Float = 2.0F

    println("YEAR  - UNITS CONSUMED - ANNUAL PERCENT GROWTH RATE") // Prints the header.

    // For each year in yearRange, calculate the number
    // of units consumed at the annualPercentGrowthRate.
    val result: ArrayBuffer[Float] = calculate(annualPercentGrowthRate * 0.01F, yearRange)
    var yearCount = 1
    // The following line prints every element in the result ArrayBuffer...
    result.foreach{
      x => printResult(yearCount, x, annualPercentGrowthRate)
      yearCount += 1
    }
  }

  def calculate(annualRate:Float, yearRange:Range):ArrayBuffer[Float] =
  {
    val result:ArrayBuffer[Float] = new ArrayBuffer()

    // For each element in yearRange, add an element to the ArrayBuffer
    // which represents the result for that year...
    for (idx <- yearRange)
    {
      if (result.size == 0)
        result += 1.0F  // Adds the first element to the result ArrayBuffer.
      else {
        val resultInPreviousArrayElement:Float = result(result.size - 1)
        // Calculate the result for the new ArrayBuffer element from resultInPreviousArrayElement,
        // and store it in the newly-added ArrayBuffer element...
        result += (resultInPreviousArrayElement * annualRate) + resultInPreviousArrayElement
      }
    }
    result
  }

  def printResult(count:Int, result:Float,  annualPercentGrowthRate:Float):Unit =
  {
    if (count < 10)
      printf("%d     - %14.2f - %5.2f\n", count, result, annualPercentGrowthRate)
    else if (count < 100)
      printf("%d    - %14.2f - %5.2f\n", count, result, annualPercentGrowthRate)
    else if (count < 1000)
      printf("%d   - %14.2f - %5.2f\n", count, result, annualPercentGrowthRate)
    else
      printf("%d  - %14.2f - %5.2f\n", count, result, annualPercentGrowthRate)
  }
}


